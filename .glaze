session {
  name = "TestSession"

  options = {
    activity-action = "any"
  }

  experimental = {
    validate_options_styles  = true
    validate_options_formats = true
  }

  popup {

  }

  menu {
    
  }

  window {
    layout = "tiled"

    options = {
      pane-border-lines             = "double"
      monitor-activity              = "on"
      aggressive-resize             = "off"
      automatic-rename              = "on"
      // automatic-rename-format       = "" // validate FORMATS
      // clock-mode-colour             = "" // validate against full colour pallette
      clock-mode-style              = "24"
      fill-character                = "1" // cannot be blank, but only len(v) == 1
      // main-pane-height              = "" // number or %
      // main-pane-width               = "" // number or %
      // copy-mode-match-style         = "" // validate STYLES
      // copy-mode-mark-style          = "" // validate STYLES
      // copy-mode-current-match-style = "" // validate STYLES
      mode-keys                     = "vi"
      // mode-style                    = "" // validate STYLES
      monitor-bell                  = "on"
      monitor-silence               = "0"
      // other-pane-height             = "" // number or %
      // other-pane-width              = "" // number or %
      // pane-active-border-style      = "" // validate STYLES
      pane-base-index               = "0"
      // pane-border-format            = "" // validate FORMATS
      pane-border-indicators        = "off"
      pane-border-lines             = "double"
      pane-border-status            = "off"
      // pane-border-style             = "" // validate STYLES
      // popup-style                   = "" // validate STYLES
      // popup-border-style            = "" // validate STYLES
      popup-border-lines            = "single"
      // window-status-activity-style  = "" // validate STYLES
      // window-status-bell-style      = "" // validate STYLES
      // window-status-current-format  = "" // validate FORMATS
      // window-status-current-style   = "" // validate STYLES
      // window-status-format          = "" // validate FORMATS
      // window-status-last-style      = "" // validate STYLES
      // window-status-separator       = "" // any string length value
      // window-status-style           = "" // validate STYLES
      window-size                   = "latest"
      wrap-search                   = "on"
    }

    pane {
      options = {
        pane-border-lines = "double"
        monitor-activity  = "on"
      }
    }

    pane {}
    pane {}
    pane {}
  }

  window {
    focus = true

    pane {}
    pane {
      focus = true
    }
    pane {}
  }
}
